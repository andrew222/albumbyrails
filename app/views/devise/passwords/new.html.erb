<h2>忘记密码?</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email, "邮箱" %><br />
  <%= f.email_field :email %></div>

  <div><%= f.submit "发送到邮箱", :class => 'btn btn-primary' %></div>
<% end %>

<%= render "links" %>