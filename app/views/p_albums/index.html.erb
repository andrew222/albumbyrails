<h2>所有相册</h2>
<%= link_to '创建新相册+', new_p_album_path %>
<table>
  <tr>
    <th>相册名称</th>
    <th>相册描述</th>
    <th cols="3">操作</th>
  </tr>

<% @p_albums.each do |p_album| %>
  <tr>
    <td><%= p_album.album_name %></td>
    <td><%= p_album.album_description %></td>
    <td><%= link_to '详细', p_album %></td>
    <td><%= link_to '修改', edit_p_album_path(p_album) %></td>
    <td><%= link_to '删除', p_album, :confirm => '确定删除此相册?', :method => :delete %></td>
  </tr>
<% end %>
</table>
