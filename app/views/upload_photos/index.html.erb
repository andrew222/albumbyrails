<h1>所有照片</h1>

<table>
  <tr>
    <th>标题</th>
    <th>照片描述</th>
    <th>照片预览</th>
    <th>所属相册</th>
    <th cols="3">操作</th>
  </tr>

<% @upload_photos.each do |upload_photo| %>
  <tr>
    <td><%= upload_photo.title %></td>
    <td><%= upload_photo.description %></td>
    <td class="image"><%= link_to image_tag("upload/"+upload_photo.photoURL, :width => "100" ), upload_photo %></td>
    <td><%= upload_photo.albumBelongTo %></td>
    <td><%= link_to '显示', upload_photo %></td>
    <td><%= link_to '编辑', edit_upload_photo_path(upload_photo) %></td>
    <td><%= link_to '删除', upload_photo, :confirm => '确定删除?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to '上传新照片', new_upload_photo_path %>
