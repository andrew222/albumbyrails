<%= form_for(@upload_photo, :html => { :multipart => true }) do |f| %>
  <% if @upload_photo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@upload_photo.errors.count, "个错误") %></h2>

      <ul>
      <% @upload_photo.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :标题 %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :照片描述 %><br />
    <%= f.text_area :description, :rows =>6 %>
  </div>
  <div class="field">
    <% if @upload_photo.photoURL.nil? %>
    <%= f.file_field("photoURL") %>
    <% else
    photoURL = @upload_photo.photoURL
    %>
    <%= image_tag("upload/"+photoURL, :width => "100") %><br />
    <% end %>
  </div>
  <div class="field">
    <%= f.label :选择相册 %><br />
      <% allAlbum %>
      <%= f.select :albumBelongTo, options_for_select(@arrAlbums) %><span><%= link_to "或者创建新相册", new_p_album_path%></span>
  </div>
  <div class="actions">
    <%= f.submit @action_name %>
  </div>
<% end %>
