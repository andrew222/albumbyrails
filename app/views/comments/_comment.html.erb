<hr style="border: dotted 0.5px"/>
<%= div_for(comment) do %>
<div style="float: left"><%= image_tag ("icon/avatar.png"), :class => "avatar" %></div>
<div style="margin-left: 5em"><h4><%= link_to comment.user, comment.user %>发表于：<%= comment.post_time.strftime("%Y-%m-%d %H:%M:%S") %></h4>
</div>
<div style="margin-left: 5em"><%= simple_format(comment.text) %>
<% if current_user.id == comment.user_id %>
<%= link_to "编辑", edit_upload_photo_comment_path(@upload_photo, comment) %>&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to "删除", [@upload_photo, comment], :method => :delete, :remote => true %>
<% end %>
</div>
<% end %>
